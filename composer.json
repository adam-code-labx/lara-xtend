{
    "name": "adam-code-labx/xtend-laravel",
    "description": "Set of tools to extend Laravel Packages",
    "keywords": [
        "adam-code-labx",
        "laravel",
        "xtend-laravel"
    ],
    "homepage": "https://github.com/adam-code-labx/xtend-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Lee",
            "email": "adam@codelabx.ltd",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "CodeLabX\\XtendLaravel\\": "src",
            "CodeLabX\\XtendLaravel\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeLabX\\XtendLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CodeLabX\\XtendLaravel\\XtendLaravelServiceProvider"
            ],
            "aliases": {
                "XtendLaravel": "CodeLabX\\XtendLaravel\\Facades\\XtendLaravel"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
